{
  "editor.formatOnSave": true,
  "git.enableSmartCommit": true,
  "git.autofetch": true,

  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  "git.confirmSync": false,

  "editor.cursorStyle": "line", // Cursor style
  "editor.fontSize": 16, // Font size

  "editor.fontFamily": "Fira Code", // Font family
  "editor.fontLigatures": true, // Font ligatures

  "editor.minimap.enabled": false, // Enable word wrap
  "editor.tabSize": 2, // Tab size 2 spaces

  "editor.guides.bracketPairs": "active",

  "RainbowBrackets.consecutivePairColors": [
    "()",
    "[]",
    "{}",
    ["yellow", "yellow", "yellow"],
    "yellow"
  ],

  "RainbowBrackets.forceIterationColorCycle": true, // Rainbow brackets
  "editor.cursorBlinking": "solid",
  "RainbowBrackets.activeScopeCSS": [
    "borderStyle : solid",
    "borderWidth : 1px",
    "borderColor : {color}; opacity: 0.5"
  ],
  "RainbowBrackets.forceUniqueOpeningColor": true,
  "RainbowBrackets.highlightActiveScope": true,
  "RainbowBrackets.independentPairColors": [
    ["()", "[]", "{}", "<>"],
    ["()", "[]", "{}", "<>"],
    ["()", "[]", "{}", "<>"]
  ],

  "RainbowBrackets.showBracketsInGutter": true,
  "RainbowBrackets.showBracketsInRuler": true,
  "files.autoSave": "onFocusChange",
  "RainbowBrackets.depreciation-notice": false,
  "editor.renderWhitespace": "none",
  "editor.bracketPairColorization.independentColorPoolPerBracketType": true,
  "editor.codeActions.triggerOnFocusChange": true,
  "liveServer.settings.donotShowInfoMsg": true,
  "git.openRepositoryInParentFolders": "never",
  "editor.formatOnType": true,
  "css.format.spaceAroundSelectorSeparator": true,
  "html.format.indentHandlebars": true,
  "html.format.indentInnerHtml": true,
  "html.format.wrapLineLength": 90,
  "pretty-formatter.braceLine": true,
  "pretty-formatter.bracePadding": true,
  "pretty-formatter.braces": true,
  "pretty-formatter.braceStyle": "collapse-preserve-inline",
  "pretty-formatter.commentLine": true,
  "pretty-formatter.comments": true,
  "pretty-formatter.compressedCss": true,
  "pretty-formatter.correct": true,
  "pretty-formatter.cssInsertLines": true,
  "pretty-formatter.elseLine": true,
  "pretty-formatter.forceAttribute": true,
  "pretty-formatter.forceIndent": true,
  "pretty-formatter.functionName": true,
  "pretty-formatter.objectSort": true,
  "pretty-formatter.styleguide": "jslint",
  "pretty-formatter.spaceClose": true,
  "pretty-formatter.tagMerge": true,
  "pretty-formatter.tagSort": true,
  "pretty-formatter.unformatted": true,
  "pretty-formatter.wrap": 70,
  "editor.defaultFoldingRangeProvider": "mblode.pretty-formatter",
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnPaste": true,
  "github.copilot.nextEditSuggestions.enabled": true,
  "github.copilot.enable": {
    "*": true,
    "plaintext": false,
    "markdown": false,
    "scminput": false,
    "html": false
  },
  "security.workspace.trust.untrustedFiles": "open"
}
